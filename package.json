    "karma-webpack": "^5.0.0-alpha.3.0",
    "postcss-nested": "^4.1.2",
    "puppeteer": "^1.19.0",
    "stylelint": "^13.8.0",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-standard": "^20.0.0",
    "webpack": "^4.29.6"
