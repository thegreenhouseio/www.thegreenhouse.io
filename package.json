    "@greenwood/plugin-import-css": "^0.10.0-alpha.8",
    "@greenwood/plugin-postcss": "^0.10.0-alpha.8",
    "@ls-lint/ls-lint": "^1.9.2",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "eslint": "^6.1.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.2.1",
    "karma": "^4.2.0",
    "karma-chrome-launcher": "^3.1.0",
