{
  "verbose": true,

  "setupFiles": [
    "raf/polyfill"
  ],

  "coverageReporters": ["html", "json", "lcov", "cobertura"],

  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/empty-module.js",
    "\\.(css|scss)$": "<rootDir>/test/__mocks__/empty-module.js",
    "node_modules/gatsby/cache-dir/pages.json$": "<rootDir>/test/__mocks__/pages.json"
  },

  "coverageDirectory": "<rootDir>/reports/test-coverage",

  "transform": { 
    "^.+\\.js$": "<rootDir>/test/jest-preprocess.js",
    "^.+\\.jsx$": "<rootDir>/test/jest-preprocess.js"
  },

  "collectCoverageFrom": [
    "src/components/**/*.{js,jsx}",
    "src/layouts/*.{js,jsx}",
    "src/pages/*.{js,jsx}",
    "src/pages/blog/*.{js,jsx}",
    "src/services/**/*.{js,jsx}",
    "!src/**/**/*.spec.*"
  ],

  "testPathIgnorePatterns": [
    "<rootDir>[/\\\\](\\.cache|node_modules)[/\\\\]"
  ],

  "coverageThreshold": {
    "global": {
      "branches": 75,
      "functions": 80,
      "lines": 70,
      "statements": 70
    }
  }
}