{
  "verbose": true,

  "setupFiles": [
    "raf/polyfill"
  ],

  "testRegex": "/.*(__tests__\\/.*)|(.*(test|spec))\\.jsx?$",
  "testPathIgnorePatterns": [
    "<rootDir>[/\\\\](\\.cache|node_modules)[/\\\\]",
    ".cache"
  ],

  "moduleNameMapper": {
    ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/empty-module.js"
  },

  "transform": { 
    "^.+\\.js$": "<rootDir>/test/jest-preprocess.js",
    "^.+\\.jsx$": "<rootDir>/test/jest-preprocess.js"
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(gatsby)/)"
  ],

  "coverageReporters": ["html", "json", "lcov", "cobertura"],
  "coverageDirectory": "<rootDir>/reports/test-coverage",
  "collectCoverageFrom": [
    "src/components/**/*.{js,jsx}",
    "src/layouts/*.{js,jsx}",
    "src/pages/*.{js,jsx}",
    "src/pages/blog/*.{js,jsx}",
    "src/services/**/*.{js,jsx}",
    "!src/**/**/*.spec.*"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  }

}